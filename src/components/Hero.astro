---
import profileImg from "../assets/profile.png";
import { Icon } from "astro-icon";
const name = "";
---

<section id="home">
  <div class="home__container container">
    <img src={profileImg} class="home__img" alt="эксперт Сургут" />

    <div class="home__data">
      <h1 class="home__name">Евгений Орлов</h1>
      <p class="home__work">эксперт(оценщик) высшей квалификации</p>
      <dl class="home__list">
        <dt>опыт:</dt>
        <dd>2010 - 2023г.</dd>
        <dt>телефон:</dt>
        <dd>
          <a href="tel:+79128168672" title="Звонок эксперту">+ 7 (912) 816-86-72</a>
        </dd>
        <dt>email:</dt>
        <dd>expert086@gmail.com</dd>
        <dt>Адрес:</dt>
        <dd>г.Сургут, ул. 50лет ВЛКСМ д.1 офис 304</dd>
      </dl>

      <div class="home__socials">
        <ul>
          <li>
            <a
              href="https://github.com"
              class="home__social-link"
              target="_blank"
            >
              <Icon pack="mdi" name="github" size={30} />
            </a>
          </li>
          <li>
            <a
              href="https://linked.com"
              class="home__social-link"
              target="_blank"
            >
              <Icon pack="uil" name="linkedin" size={30} />
            </a>
          </li>
          <li>
            <a
              href="https://facebook.com"
              class="home__social-link"
              target="_blank"
            >
              <Icon pack="ic" name="baseline-facebook" size={30} />
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>

<style>
  #home {
    width: 100%;
    background: url("../assets/home_bg.jpg");
    background-size: cover;
    background-position: top right;
    background-repeat: no-repeat;
    padding-top: calc(5.5rem - 2.125rem);
    color: var(--bg-color);
    position: relative;
    margin-bottom: 3rem;
  }

  #home::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--linear-gradient);
  }

  .home__container {
    display: flex;
    gap: 1rem;
    width: 100%;
    padding-top: 1rem;
  }

  .home__img,
  .home__data {
    z-index: 10;
  }

  .home__img {
    width: 100%;
    max-width: 380px;
    height: auto;
    object-fit: cover;
    border-radius: 1rem;
    transform: translateY(3.125rem);
    box-shadow: 0 0 27px rgb(96 96 96 / 34%);
  }

  .home__data {
    padding-left: 2rem;
  }

  .home__name,
  .home__work,
  .home__list,
  .home__socials-link {
    font-family: var(--mono-font);
  }

  .home__name {
    font-size: var(--fs-h1);
    line-height: 1.14em;
    letter-spacing: 1px;
    margin: 0.9em 0 0.23em;
  }

  .home__work {
    margin-bottom: 2.5em;
  }

  dt {
    float: left;
    font-weight: var(--bold);
    opacity: 0.4;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  dd {
    padding-left: 6.25em;
    letter-spacing: 1px;
  }

  dd:not(:last-child) {
    margin-bottom: 0.94em;
  }

  a:hover {
    font-weight: bold;
  }

  .home__socials {
    margin: 1.25rem 0 2.2rem;
  }

  .home__social-link {
    opacity: 0.6;
    transition: var(--transition);
  }

  .home__social-link:hover {
    opacity: 1;
  }

  ul {
    display: flex;
    gap: 1rem;
  }

  a {
    color: var(--bg-color);
  }

  /* ======= (Medium Devices) ======= */
  @media (width < 804px) {
    #home {
      background-position: top left;
      margin-bottom: 0;
    }

    .home__container {
      flex-direction: column;
      column-gap: 1rem;
      align-items: center;
      padding-top: 0;
    }

    .home__img {
      transform: translateY(2.125rem);
    }

    .home__name {
      text-align: center;
    }

    .home__data {
      padding-top: 1rem;
    }
  }

  /* ======= (Small Devices) ======= */
  @media (width < 600px) {
    .home__name {
      font-size: var(--fs-h2);
    }

    .home__work {
      text-align: center;
    }

    .home__data {
      padding-left: 1rem;
    }

    

    @media (width < 470px) {
      ul {
      justify-content: center;
    }
    }
  }
</style>
