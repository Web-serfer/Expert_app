---
import { Icon } from "astro-icon";
---

<header id="header">
  <nav class="nav container">
    <div class="logo">
      <a href="/">Expert_086</a>
    </div>
    <ul class="nav__list">
      <li>
        <a href="#home" class="nav__link active-link">На главную</a>
      </li>
      <li>
        <a href="#services" class="nav__link">Услуги</a>
      </li>
      <li>
        <a href="#resume" class="nav__link">Образование</a>
      </li>
      <li>
        <a href="#portfolio" class="nav__link">Работа</a>
      </li>
      <li>
        <a href="#blog" class="nav__link">Блог</a>
      </li>
      <li>
        <a href="#contact" class="nav__link">Контакты</a>
      </li>
    </ul>

    <!-- toggle button -->
    <div class="toggle_btn">
      <Icon pack="uil" name="bars" size={25} />
    </div>
  </nav>

  <!-- Dropdown menu -->
  <div class="dropdown_menu">
    <ul>
      <li>
        <a href="#home" class="active-link">Главная</a>
      </li>
      <li>
        <a href="#services">Услуги</a>
      </li>
      <li>
        <a href="#resume">Образование</a>
      </li>
      <li>
        <a href="#portfolio">Работа</a>
      </li>
      <li>
        <a href="#blog">Блог</a>
      </li>
      <li>
        <a href="#contact">Контакты</a>
      </li>
    </ul>
  </div>
</header>

<style>
  #header {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 20;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    width: 100%;
    height: 80px;
    margin: 0 auto;
  }

  .logo a {
    color: #fff;
    text-transform: uppercase;
    font-weight: var(--bold);
    font-size: 1.1rem;
    background-image: linear-gradient(
      to bottom right,
      var(--text-color-alt),
      #fff
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .nav__list {
    display: flex;
    gap: 3rem;
    align-items: flex-end;
  }

  .nav__link {
    color: var(--bg-color);
    font-size: 1rem;
    text-transform: uppercase;
    font-weight: var(--bold);
    letter-spacing: 1px;
    font-family: var(--mono-font);
    transition: var(--transition);
    position: relative;
  }

  .nav__link:hover {
    background-image: linear-gradient(
      to bottom right,
      var(--text-color-alt),
      #fff
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .nav__link::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #fff;
    opacity: 0;
    transition: var(--transition);
  }

  .nav__link:hover::after {
    opacity: 1;
  }

  .active-link {
    opacity: 0.5;
  }

  .active-link::after {
    opacity: 1;
  }

  .toggle_btn {
    color: #fff;
    display: none;
  }

  .toggle_btn:hover {
    cursor: pointer;
  }

  /* ==== Dropdown menu ==== */

  .dropdown_menu {
    display: none;
    position: absolute;
    right: 3rem;
    top: 60px;
    height: 0;
    width: 300px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(15px);
    border-radius: 10px;
    overflow: hidden;
    transition: height 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .dropdown_menu.open {
    height: 300px;
    padding-top: 0.7rem;
  }

  .dropdown_menu li {
    padding: 0.7rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .dropdown_menu li a {
    color: #fff;
    text-transform: uppercase;
    font-weight: var(--bold);
    font-size: 1.1rem;
    background-image: linear-gradient(
      to bottom right,
      var(--text-color-alt),
      #fff
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* ======= (Medium Devices) ======= */
  @media (width < 992px) {
    .nav__list {
      display: none;
    }
    .dropdown_menu {
      display: block;
    }

    .toggle_btn {
      display: block;
    }
  }
  /* ======= (Small Devices) ======= */
  @media (width < 600px) {
    .dropdown_menu {
      left: 2rem;
      width: unset;
      margin-top: 1rem;
    }
  }
</style>

<script>
  const toggleBtn = document.querySelector(".toggle_btn");
  const toggleBtnIcon = document.querySelector(".toggle_btn .bars");
  const dropDownMenu = document.querySelector(".dropdown_menu");

  toggleBtn.onclick = function () {
    dropDownMenu.classList.toggle("open");
    const isOpen = dropDownMenu.classList.contains("open");
  };
</script>
